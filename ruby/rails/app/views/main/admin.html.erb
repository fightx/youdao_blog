<div class="page-header">
  <h1>后台管理</h1>
</div>

<% Page.where(list_id: nil).each do |page| %>
<%= page.title %>
<% end %>
<%= form_for Page.new do |f| %>
  <%= f.text_field :youdao_url, placeholder: "Youdao Url", required: true, class: "input-xxlarge" %>
  <%= f.submit "创建内容页", class: "btn" %>
<% end %>

<hr/>

<% List.all.each do |list| %>
  <h3>#<%= list.id %>. <%= list.title %> /<%= list.permalink %></h3>
  <% list.pages.each do |page| %>
    #<%= page.id %>. <%= page.title %><br/>
  <% end %>
  <%= form_for Page.new do |f| %>
  <%= hidden_field_tag :list_id, list.id %>
  <%= f.text_field :youdao_url, placeholder: "Youdao Url", required: true, class: "input-xxlarge" %>
  <%= f.submit "创建内容页", class: "btn" %>
  <% end %>
<% end %>
<%= form_for List.new do |f| %>
<%= f.text_field :title, placeholder: "title", required: true, class: "input-small" %>
/<%= f.text_field :permalink, placeholder: "permalink", required: true, class: "input-small" %>
<%= f.submit "创建列表页", class: "btn" %>
<% end %>

<hr/>

<% Menuitem.all.each_with_index do |menuitem, index| %>
#<%= index + 1 %> <%= menuitem.ref_type %>#<%= menuitem.ref_id %><br/>
<% end %>
<%= form_for Menuitem.new do |f| %>
<%= f.text_field :ref_type, class: "input-medium", placeholder: "type: list or page", required: true %>
<%= f.text_field :ref_id, class: "input-medium", placeholder: "id: list id or page id", required: true %>
<%= f.submit "创建菜单项", class: "btn"%>
<% end %>